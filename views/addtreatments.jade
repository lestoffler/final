extends layout

block content
	img#add-treatment-image(src="http://2.bp.blogspot.com/_cWcuJM9QIG4/S7hSrBEDK8I/AAAAAAAAAZA/OHtyz3cUJ2o/s1600/Natural+wallpapers%252Bmobile+wallpapers%252Bpc+wallpapers%252Bwallpapers%252Bmobile+themes%252Bpc+themes+1ro.jpg" class="img-responsive" width="1000px" height="200px")
	h1#add-treatment-title 	Add Your Holistic Treatment To The Self-Wellness Network
	h3#add-treatment-subtitle Please be as specific as possible.
	hr
	
	p.treatment-type-two Treatment Type 
	p.health-category-two Health Category
