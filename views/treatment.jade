extends layout

block content
	div#masthead
		div.container
			div.row
				div.col-md-2
					div.well
						img(src="http://www.armonikizoi.com/wp-content/uploads/13643141-health-nature-logo.jpg" class="img-responsive")
				div.col-md-10
					h1 The Self-Wellness Network Profile Page
					ul
						li.educate Educate.
						li.empower Empower.
						li.heal Heal.
						li.balance Balance.
						li.grow Grow.
	hr
	div.welcome-message
		div.col-md-8.intro
			h1#name-intro Hello #{user.username}!
			h4#homepage Welcome to your home page! This is where you can search for Holistic Treatments using the type of treatment and/or the category of health. Please share your own Holistic Treatments with the network by clicking on the link below. This page allows you to save Holistic Treatments that you find useful for your future reference. Please rate any Holistic Treatments that you discover here to let others know if the treatment was useful for you or not. Thank you so much for using this site and I hope that it empowers you to take control of your own health and wellness!
		div.col-md-4
			img(src="http://media-cache-ak0.pinimg.com/736x/9b/b1/75/9bb175cfb853dc25759b08c952af34c6.jpg" class="img-responsive hello-img" height="100px" width="250px")
	hr
	div.search-two.col-md-6
		h3.search-title Search the Network for Holistic Treatments by Treatment Type or Health Category.
		p.treatment-type Treatment Type
		p.health-category Health Category
		form#searchtreatment(method="get", action="/home")
			select(name="type", placeholder="Type" class="type")
				option(value="") None
				option(value="Acupuncture") Acupuncture
				option(value="Aromatherapy") Aromatherapy
				option(value="Behavioral Health") Behavioral Health
				option(value="Chinese Medicine") Chinese Medicine
				option(value="Chiropractic") Chiropractic
				option(value="Diet") Diet
				option(value="Energy-Based Therapies") Energy-Based Therapy
				option(value="Exercise") Exercise
				option(value="Herbology") Herbology
				option(value="Homeopathy") Homeopathy
				option(value="Massage therapy") Massage Therapy
				option(value="Naturopathy") Naturopathy
				option(value="Psychotherapy") Psychotherapy
				option(value="Stress Therapy") Stress Therapy
			select(name="category", placeholder="Category", class="category")
				option(value="") None
				option(value="ADHD/ADD") ADHD/ADD
				option(value="Allergies") Allergies
				option(value="Anxiety") Anxiety
				option(value="Arthritis") Arthritis
				option(value="Autoimmune Disorder") Autoimmune Disorder
				option(value="Bipolar Disorder") Bipolar Disorder
				option(value="Cancer") Cancer
				option(value="Cardiac") Cardiac
				option(value="Depression") Depression
				option(value="Digestion") Digestion
				option(value="Diabetes") Diabetes
				option(value="Hormones") Hormones
				option(value="Pain") Pain
				option(value="PTSD") PTSD
				option(value="Seizures") Seizures
				option(value="Skin/Hair/Beauty") Skin/Hair/Beauty
				option(value="Substance Abuse") Substance Abuse
			button(type="submit" class="search") Find

	div.addto.col-md-6
		h3.addtreatment Please add Holistic Treatments that you would like to share with the network and that have worked for you!
		a(href="/addtreatment" class="add-treatment") Click Here To Add Holistic Treatments
	div.treatment-two
	for treatment in treatments
		div(id="treatment")
			div.col-md-2.treatment-image
				img(class="static-image" src="http://www.earnestholistichealth.com/wp-content/uploads/2013/07/zen-stress-management.jpg" width="175px" height="290px")
			div.col-md-10.treatment
				h2.treatment-name Name: #{treatment.name}
				h3.treatment-category Category: #{treatment.category}
				h3.treatment-type Type: #{treatment.type}
				h3.treatment-materials Materials Needed: #{treatment.materials}
				h3.treatment-description Description of Treatment: #{treatment.description}
				button(name="plusone" class="plusone" data-which="#{treatment.name}") This Treatment Is Useful
				button(name="minusone" class="minusone" data-which="#{treatment.name}") This Treatment Is Not Useful
				h3.total-score Total Usefulness Score: #{treatment.totalScore}
		

block scripts
	script(src="/main.js")